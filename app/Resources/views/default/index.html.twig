{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            {{ file_get_contents(readme_md)|raw|markdown }}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        body { background: #F5F5F5; font: 18px/1.5 sans-serif; }
        #wrapper { background: #FFF; margin: 1em auto; max-width: 800px; width: 95%; }
        #container { padding: 0.5em 2em; }
        code { background: #F5F5F5; word-wrap: break-word; }
    </style>
{% endblock %}
